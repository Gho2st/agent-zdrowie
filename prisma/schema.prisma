generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                           Int            @id @default(autoincrement())
  email                        String         @unique
  name                         String?
  image                        String?
  createdAt                    DateTime       @default(now())
  updatedAt                    DateTime       @updatedAt
  gender                       String?
  height                       Int?
  weight                       Float?
  diastolicMax                 Int?
  diastolicMin                 Int?
  systolicMax                  Int?
  systolicMin                  Int?
  weightMax                    Float?
  weightMin                    Float?
  glucoseFastingMax            Int?
  glucoseFastingMin            Int?
  glucosePostMealMax           Int?
  glucosePrediabetesFastingMax Int?
  glucosePrediabetesFastingMin Int?
  bmi                          Float?
  medications                  String?
  birthdate                    DateTime?
  activityLevel                String?   // "niski", "umiarkowany", "wysoki"
  conditions                   String?   // np. "cukrzyca,nadciśnienie,ciąża"
  pulseMax                     Int?
  pulseMin                     Int?
  dailyCheckins                DailyCheckin[]
  measurements                 Measurement[]
}

model Measurement {
  createdAt DateTime @default(now())
  userId    Int
  id        Int      @id @default(autoincrement())
  type      String
  unit      String
  diastolic Int?
  systolic  Int?
  context   String?
  note      String?
  timing    String?
  amount    Float?
  user      User     @relation(fields: [userId], references: [id])
}

model DailyCheckin {
  id        Int      @id @default(autoincrement())
  date      DateTime
  mood      String?
  sleep     String?
  energy    String?
  stress    String?
  userId    Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  @@unique([userId, date])
}
